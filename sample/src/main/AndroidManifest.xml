<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alexvasilkov.foldablelayout.sample">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Eagles connect Demo"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup">
        <activity
            android:name=".activities.SignUpActivity"
            android:label="Sign Up"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UnfoldableDetailsActivity"
            android:label="Unfoldable details" />
        <activity
            android:name=".activities.FoldableListActivity"
            android:label="Foldable list" />
    </application>

</manifest>
